<h1>{{title}}</h1>
{{# if products }}
<div class="cart page">
    <ul class="list-group">
        {{# each products }}
        <li class="list-group-item clearfix">
            <div class="col-sm-3">
                <strong>{{ Product.product_name }}</strong>
                <br/>
                <img class="prodimg" src={{Product.product_image}} class="rounded img-fluid" width="200rem">
            </div>
            <div class="form-group col-sm-2 mt-4">
                <label for="sel1">Quantity</label>
                <input data-id={{id}} data-product={{ProductId}} type="number" class="sell" value={{cart_quantity}}>
            </div>
            <br>
            <div class="col-sm-2 text-right mt-4">
                ${{ Product.price }} 
            </div>
              <div class="col-sm-2 text-right mt-4">
               ${{formatTotal cart_quantity Product.price}}
            </div>
            <div class="col-sm-3 text-right mt-2">
         {{!--<a href="#" class="btn btn-default update" data-id={{id}}> <i class="fa fa-pencil" aria-hidden="true">
               </i></a> --}}
  <a href="# " class="btn btn-default delete" data-id={{id}}> <i class="fa fa-trash" aria-hidden="true"> 
                    </i></a>
            </div>
        </li>
        {{/each}}
    </ul>
</div>
<div class="text-right">
    <strong>Total: ${{ total }} </strong>
</div>
<hr>
<div class="text-right">
    <a href="#" type="button" class="btn btn-success shop">Shop</a>
    <a href="#" type="button" class="btn btn-success checkout">Checkout</a>
    {{!-- <a href="#" type="button" class="btn btn-success clear">Clear</a> --}}
</div>
{{ else }} Your shopping cart is empty. 
{{/if}}
<script src="/assets/js/cart.js"></script>

