<h1>{{title}}</h1>
{{# if products }}
<div class="cart page">
    <ul class="list-group">
        {{# each products }}
        <li class="list-group-item clearfix">
            <div class="col-xs-5">
                <strong>{{ Product.product_name }}</strong>
                <br/>
                {{!-- <em>{{{Product.product_image}}}</em> --}}
                <img class= "prodimg" src={{Product.product_image}} width="200rem">
            </div>
            <div class="col-xs-2 text-right mt-4">
                <label>
                    <input list="qty" name="myBrowser" value={{quantity}}>
                    <span class="qty1">{{ quantity }}</span>
                </label>
                <datalist id="qty">
                    <option value="1">
                     <option value="2">
                     <option value="3">
                    <option value="4">
                    <option value="5">
                    <option value="6">
                </datalist>

            </div>
            <div class="col-xs-3 text-right">
                ${{ Product.price }}
            </div>
            <div class="col-xs-2 text-right">
                <a href="/remove/{{id}}" class="btn btn-default">
                    </i> Remove</a>
            </div>
        </li>
        {{/each}}
    </ul>
</div>
<div class="text-right">
    <strong>Total: {{ totalPrice }} $</strong>
</div>
<hr>
<div class="text-right">
    <a href="#" type="button" class="btn btn-success">Checkout</a>
</div>
{{ else }} Your shopping cart is empty. {{/if}}