<h1>{{title}}</h1>
{{# if products }}
<div class="cart page">
    <ul class="list-group">
        {{# each products }}
        <li class="list-group-item clearfix">
            <div class="col-xs-5">
                <strong>{{ Product.product_name }}</strong>
                <br/>
                <img class= "prodimg" src={{Product.product_image}} width="200rem">
            </div>
            <div class="col-xs-2 text-right mt-4">
                <label>
                    <input list="qty" name="myBrowser" value={{cart_quantity}}>
                    <span>{{total}}</span>
                </label>
                <br>
                <datalist id="qty">
                    <option value="1">
                     <option value="2">
                     <option value="3">
                    <option value="4">
                    <option value="5">
                    <option value="6">
                </datalist>
            </div>
            <div class="col-xs-3 text-right">
                ${{ Product.price }}
            </div>
            <div class="col-xs-2 text-right">
                <a href="#" class="btn btn-default delete" data-id={{id}}>
                    </i> Remove</a>
                <a href="#" class="btn btn-default update" data-id={{id}}>
                    </i> Update</a>    
            </div>
        </li>
        {{/each}}
    </ul>
</div>
<div class="text-right">
    <strong>Total: ${{ total }} </strong>
</div>
<hr>
<div class="text-right">
    <a href="#" type="button" class="btn btn-success shop">Shop</a>
    <a href="#" type="button" class="btn btn-success checkout">Checkout</a>
    <a href="#" type="button" class="btn btn-success clear">Clear</a>
</div>
{{ else }} Your shopping cart is empty. {{/if}}
<script src="/assets/js/cart.js"></script>