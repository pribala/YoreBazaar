<h1>{{title}}</h1>
{{# if products }}
<div class="cart page">
    <ul class="list-group">
        {{# each products }}
        <li class="list-group-item clearfix">
            <div class="col-sm-5">
                <strong>{{ Product.product_name }}</strong>
                <br/>
                <img class="prodimg" src={{Product.product_image}} class="rounded img-fluid" width="200rem">
            </div>
            <div class="form-group col-sm-2 mt-4">
                <label for="sel1">Quantity</label>
                <select class="form-control" id="sel1" name="myBrowser" value={{cart_quantity}}>
                    <option>1</option>
                    <option>2</option>
                    <option>3</option>
                    <option>4</option>
                </select>
            </div>
            <br>
            <div class="col-sm-2 text-right mt-4" >
                ${{ Product.price }}
            </div>
            <div class="col-sm-3 text-right mt-2">
                <i class="fa fa-trash fa-2x" aria-hidden="true">
<a href="/remove/{{id}}" class="btn btn-default">
                    </i></a>
            </div>
        </li>
        {{/each}}
    </ul>
</div>
<div class="text-right">
    <strong>Total: ${{ total }} </strong>
</div>
<hr>
<div class="text-right">
    <a href="#" type="button" class="btn btn-success">Checkout</a>
</div>
{{ else }} Your shopping cart is empty. {{/if}}