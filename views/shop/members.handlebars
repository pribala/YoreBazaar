  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <h2>Welcome <span class="member-name">{{user}}</span></h2>
      </div>
    </div>
    <div class="row mt-5 profiles">
       {{#each profiles}} 
        <div class="col-md-3">
        <img class='rounded-circle img-fluid userProfile' data-id={{profile_id}} data-name={{profile_name}} src={{profile_image}}>
        <p>{{profile_name}}</p>
        </div>
      {{/each}}
      <div class="col-md-3">
        <button class="btn add-profile"><i class="fa fa-plus-circle fa-5x" aria-hidden="true"></i></button>
      </div>
    </div>
    <!-- Modal -->
    <div class="container-fluid" id="myModal" >
    <div class="modal fade" id="profileInfo" tabindex="-1" role="dialog" aria-labelledby="matchInfoTitle" aria-hidden="true">
      <div class="modal-dialog " role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h4 class="modal-title" id="profileTitle">Add Profile</h4>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
             <form name="newProfile">
               <div class="form-group">
              {{!-- <label for="profilename">Profile Name</label> --}}
              <h5>Profile Name
               <input type="text" name="profilename" id="profilename" placeholder="Name"></h5>
               </div>
               <div class="form-group">
               {{!-- <label for="profileImage">Profile Image</label> --}}
               <h5>Profile Image
               <input type="url" name="profileimage" id="profileimage" value="https://orig00.deviantart.net/0a2d/f/2010/282/d/4/aang___smile_by_viress-d30ezjd.jpg">
               </h5>
                </div>
              
              </form>
          </div>
          <div class="modal-footer">
             <button type="submit" class="btn btn-primary"  id="profile-submit">Add Profile</button>
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  </div>
  <script src="/assets/js/members.js"></script>
  <script>
$('#myModal').on('shown.bs.modal', function () {
  $('#myInput').focus()
})
 </script>