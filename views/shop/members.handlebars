<div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <h2>Welcome <span class="member-name">{{user}}</span></h2>
      </div>
    </div>
    <div class="row mt-5 profiles">
       {{#each profiles}} 
        <div class="col-md-3">
        <img class='rounded-circle img-fluid userProfile' data-id={{profile_id}} data-name={{profile_name}} src={{profile_image}}>
        <p id="user-name">{{profile_name}}</p>
        <button class="btn del-profile" data-id={{profile_id}}><i class="fa fa-trash" aria-hidden='true'></i></button>
        <button class="btn upd-profile" data-id={{profile_id}}><i class="fa fa-pencil" aria-hidden="true"></i></button>
        </div>
      {{/each}}
      <div class="col-md-3">
        <button class="btn add-profile"><i class="fa fa-plus-circle fa-5x" aria-hidden="true"></i></button>
      </div>
    </div>
    <!-- Modal -->
    <div class="modal fade" id="profileInfo" tabindex="-1" role="dialog" aria-labelledby="matchInfoTitle" aria-hidden="true">
      <div class="modal-dialog modal-sm" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h4 class="modal-title" id="profileTitle">Add Profile</h4>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
             <form name="newProfile">
               <h5><label for="profilename">Profile Name</label></h5>
               <input type="text" name="profilename" id="profilename" placeholder="Name">
                </br>
               <h5><label for="profileImage">Profile Image</label></h5>
               <input type="url" name="profileimage" id="profileimage" value="https://orig00.deviantart.net/0a2d/f/2010/282/d/4/aang___smile_by_viress-d30ezjd.jpg"placeholder="Add a URL">
               <button type="submit" class="btn btn-primary" id="profile-submit">Add Profile</button>
               <button type="submit" class="btn btn-primary" id="profile-update">Update Profile</button>
              </form>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script src="/assets/js/members.js"></script>