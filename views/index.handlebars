<div class="container wrapper">
    <div class="jumbotron text-right">
      <h1 class="display-3"><strong> Yore Bazaar</strong></h1>
   
      <p class="lead mt-4"><i class="fa fa-cutlery" aria-hidden="true"></i> Personalized Shopping Experience!</p>
             
    </div>
    <div class="row text-center">
      <div class="col-md-6 offset-md-3">
      <div class="card">
        <div class="card-header">
          Add a Product
        </div>
        <div class="card-body">
          <form class="create-form">
            <div class="form-group">
            <label for="name">Product Name:</label>
            <input type="text" id="name" name="name">
            </div>
            <div class="form-group">
            <label for="price">Product Price:</label>
            <input type="text" id="price" name="price">
            </div>
            <div class="form-group">
            <label for="quantity">Stock Quantity:</label>
            <input type="text" id="quantity" name="quantity">
            </div>
            <div class="form-group">
            <label for="deptId">Department Name:</label>
            <select id="dept"></select>
            
            </div>
            <button type="submit" class="btn">Add a Product</button>
          </form>
        </div>
      </div>      
    </div>
  </div> 
  <div class="row mt-4">
    <div class="col-6">
      <div class="card">
        <div class="card-header text-center">
          Product List</div>
        <div class="card-body">
          <p class="card-text">
            <ul>
              {{#each products}}
               
                <li>
                <div class="row">
                  <div class="col">
                  {{ product_name }}
                  </div>
                  <div class="col">
                   <button class="btn cart-btn" data-id={{id}}>Add to cart!</button>
                   </div> 
                </div>   
                </li>
                
              {{/each}}
            </ul>
          </p>
        </div>
      </div>
    </div>
  
  </div>
</div>
<footer class="footer text-center">
    <div class="container align-middle">
      <p><a class="navLink" href="https://github.com/pribala/YoreBazaar" target="_blank">GitHub Repo</a></p>
      <p>@Copyright PRIYA BALAKRISHNAN</p>
    </div>  
</footer>
